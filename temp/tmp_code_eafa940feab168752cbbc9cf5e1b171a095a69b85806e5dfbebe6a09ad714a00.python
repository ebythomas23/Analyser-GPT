import pandas as pd
import matplotlib.pyplot as plt

# Load the Iris dataset
data = pd.read_csv('Iris.csv')

# Print the column names to identify the correct column for species
print("Column names in the Iris dataset:", data.columns)

# Count the number of occurrences of each flower type
if 'species' in data.columns:
    flower_counts = data['species'].value_counts()
elif 'Species' in data.columns: # Checking if a capitalized version exists
    flower_counts = data['Species'].value_counts()
else:
    raise KeyError('The species column is not found in the dataset.') 

# Plotting the graph
plt.figure(figsize=(8, 6))
flower_counts.plot(kind='bar')
plt.title('Count of Flower Types in Iris Dataset')
plt.xlabel('Flower Type')
plt.ylabel('Count')
plt.xticks(rotation=45)
plt.tight_layout()

# Show the plot
plt.show()

print("The bar graph of flower types in the Iris dataset has been displayed.")
